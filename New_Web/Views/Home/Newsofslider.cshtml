@model IEnumerable<Datalayer.Page>
<div class="col-xl-4 col-lg-12">
    <div class="item-box-light-md-less30 ie-full-width">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="media mb-25 col-xl-12 col-lg-6 col-md-6 col-sm-12">
                    <div class="position-relative width-36">
                        <a class="img-opacity-hover" href="single-news-1.html">
                            <img src="~/PageImages/@item.ImageName" alt="news" class="img-fluid">
                        </a>
                    </div>
                    <div class="media-body media-padding5">
                        <div class="post-date-dark">
                            <ul>
                                <li>
                                    <span>
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                    </span>@item.CreateDate.ToShamsi()
                                </li>
                            </ul>
                        </div>
                        <h3 class="title-medium-dark size-sm mb-none">
                            <a href="~/Content/single-news-2.html">@item.ShortDescription</a>
                        </h3>
                    </div>
                </div>

        }
                </div>
            </div>
        </div>
