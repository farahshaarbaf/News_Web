@model IEnumerable<Datalayer.ShowGroupViewModel>


<div class="col-xl-4 col-lg-3 col-md-6 col-sm-12">
    <div class="footer-box">
        <h2 class="title-bold-light title-bar-left text-uppercase">دسته های محبوب</h2>
        <ul class="popular-categories">
                @foreach (var item in Model)
                {
                          <li><a href="/Group/@item.GroupID/@item.GroupTitle">  @item.GroupTitle <span>@item.PageCount</span></a> </li>
                }
        </ul>
    </div>
</div>


